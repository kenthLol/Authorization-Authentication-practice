@model IEnumerable<practica4.Models.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Ã¡lbumes</h1>

<p>
    <a asp-action="Create">Ingresar nuevo</a>
</p>
<div class="mb-4">
        <div class="row">
            @foreach (var item in Model) {
                <div class="col-md-4 mb-4">
                    <div class="card" style="max-width: 300px; margin: auto">
                        <div style="text-align: center; padding: 10px; border: 1px solid #ccc; border-radius: 5%;">
                            <img src="@item.Portrait" class="card-img-top img-fluid" alt="User Photo" style="width: 170px; height: 170px;">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mt-2">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text"><strong>Publicado:</strong> @Html.DisplayFor(modelItem => item.ReleaseDate)</p>
                            <p class="card-text"><strong>Artista:</strong> @Html.DisplayFor(modelItem => item.Artist.Name)</p>
                        </div>
                        <div class="card-footer text-right">
                            <a href="@Url.Action("Edit", new { id = item.AlbumId })" class="btn btn-primary">Editar</a>
                            <a href="@Url.Action("Details", new { id = item.AlbumId })" class="btn btn-secondary">Detalles</a>
                            <a href="@Url.Action("Delete", new { id = item.AlbumId })" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>


